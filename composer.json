{
    "name": "username/lpf",
    "description": "Приложение для добавления и редактирования записей в базе данных",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "autoload": {
        "psr-4": {
            "LPF\\": "html/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LPF\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
     "scripts": {
      "test": "phpunit"
    }
}
